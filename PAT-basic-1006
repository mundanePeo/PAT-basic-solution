The description and analysis of the question is in here:  https://blog.csdn.net/ThunderF/article/details/90599220

#include <iostream>


using namespace std;

int main() {
	int num;
	cin >> num;
	while (num > 0) {
		if (num >= 100) {
			for (int i = 0; i < num / 100; i++)
				cout << "B";
			num = num % 100;
		}
		else if (num < 100 && num >= 10) {
			for (int i = 0; i < num / 10; i++)
				cout << "S";
			num = num % 10;
		}
		else {
			for (int i = 1; i <= num; i++)
				cout << i;
			num = num % 1;
		}
		
	}
	return 0;
}
